name: Impersonate Drakeerv (dont)
on:
  workflow_dispatch:

jobs:
  commit-n-push:
    runs-on: ubuntu-latest
    steps:
      - name: checkout repo
        uses: actions/checkout@v4

      - name: make noop change
        run: |
          git config user.name "drakeerv"
          git config user.email "drakeerv@outlook.com"
          echo "# noop" >> .noop || true
          git add .noop || true
          git commit -m "chore: noop commit" || echo "nothing to commit"
          git push || echo "nothing to push"
